{% extends 'admin/base-admin.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <h1 class="mb-4">Tags</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tag.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ tag.imageName }}</td>
