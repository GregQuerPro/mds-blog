<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header class="header">
    <nav class="header__nav">
        <div class="header__logo"><a href="{{ path('home') }}">JV Archives</a></div>
        <ul class="header__menu">
            <li class="header__menu-item"><a href="{{ path('category', {slug: 'nintendo'}) }}">Nintendo</a></li>
            <li class="header__menu-item"><a href="{{ path('category', {slug: 'playstation'}) }}">Playstation</a></li>
            <li class="header__menu-item"><a href="{{ path('category', {slug: 'xbox'}) }}">Xbox</a></li>
            <li class="header__menu-item"><a href="{{ path('category', {slug: 'pc'}) }}">PC</a></li>
        </ul>
    </nav>
</header>
    {% block body %}{% endblock %}
</body>
</html>


